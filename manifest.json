{
  "name": "PostalFinder",
  "description": "Automatically detects your location and shows your ZIP code.",
  "version": "1.0.0",
  "manifest_version": 3,
  "permissions": ["geolocation"],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "icons": {
    "16": "images/icons/icon-16.png",
    "32": "images/icons/icon-32.png",
    "48": "images/icons/icon-48.png",
    "128": "images/icons/icon-128.png"
  },
  "host_permissions": [
  "https://postal-finder-production.up.railway.app/*"
]


}
